{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "${version}",
    "push": true,
    "pushTags": true
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
